pipeline{
    agent any
    stages{
        stage("checkout"){
            steps{
                echo "code has been checkout"
            }
        }
        stage("Build"){
            steps{
                echo "The build is done"
            }
        }
        stage("Deploy"){
            steps{
                echo "The deployment is done"
            }
        }
    }
    post{
        success{
            echo "This Build is successfully"
        }
        failure{
            echo "This build is failure"
        }
    }
}
